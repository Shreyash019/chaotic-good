# ─── Auth Service ───────────────────────────────────────────
AUTH_PORT=8081
JWT_SECRET=your-strong-secret-here
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=7

# ─── User Service ────────────────────────────────────────────
USER_PORT=8082

# ─── Joke Service ────────────────────────────────────────────
JOKE_PORT=8083

# ─── Gateway ─────────────────────────────────────────────────
GATEWAY_PORT=8080
RATE_LIMIT_PER_MINUTE=60

# ─── Service URLs (used by gateway) ──────────────────────────
AUTH_SERVICE_URL=http://localhost:8081
USER_SERVICE_URL=http://localhost:8082
JOKE_SERVICE_URL=http://localhost:8083

# ─── Nginx ───────────────────────────────────────────────────
NGINX_PORT=80
# ─── Database ─────────────────────────────────────────
# Set to enable PostgreSQL. Leave blank to use in-memory stores.
DATABASE_URL=postgres://postgres:postgres@localhost:5432/chaotic_good?sslmode=disable